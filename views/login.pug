Doctype= html 
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='css/login.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css'
      integrity='sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer')
    title Login-Page
  body
    img.login-body(src='images/login-bg.jpg')
    .login-box
        img.left-pic(src='images/login-left.png')
        form.right-box(action='/login' method='POST')
            .top-header
              .welcome-back Welcome BacküñêÔ∏è
            .login-as-container
              .login-as-label
                .login-as login As
              select.login-as-dropdown(name='login-as')
                  option.operator(value='user' data-stake='user') User
                  option.operator(value='operator' data-stake='operator' selected) Operator
                  option.operator(value='admin' data-stake='admin') Administrator
            .error-label 
            .oid-box
              .oid-label
                .oid OID
              .oid-input-box
                  input.your-oid(type='text' placeholder='your OID' name='oid')
                  i.oid-icon.fa-solid.fa-id-card-clip
            .password-id
              .password-label
                .frame-265
                  .password Password
            .password-input-box
                input.password2(type='password' placeholder='password' name='password') 
                i.eye-icon.fa-solid.fa-eye-slash
            .forget-link
                a.forget-password(href='/forget-password') Forget password?
            button.login-btn
                .login Login